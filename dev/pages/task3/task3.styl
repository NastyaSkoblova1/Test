html
	height 100%
	background-color #f3f3f3
	
main
	padding 30px 0
	display flex
	justify-content center

.test
	position relative
	width 100%
	padding-top 20pr
	padding-bottom 30pr
	padding-left 15pr
	padding-right 15pr
	font-family Arial, sans-serif
	background-color white
	box-shadow 0 0 5px rgba(0, 0, 0, 0.4)
	
	+above(768px)
		max-width 650px
		padding-top 35pr
		padding-bottom 30pr
		padding-left 30pr
		padding-right 30pr
		border-radius 3px
		

	&__item, &__result
		display none
		position relative
		top 0
		left 0
		
		&.show
			display block
	
	&__row
		display flex
		justify-content center
	
	&__btn, &__btn-result
		@extend $btn-reset
		display none
		padding 15px 30px
		font-size 20pr
		font-weight 600
		color white
		background-color #c89f6d
		border-radius 5px
		box-shadow 0px 2px 0 1px #c89f6d - 15%
		transition background-color .3s ease
		
		&:hover
			background-color #c89f6d - 15%
	
	&__quest
		padding-bottom 20pr
		border-bottom 1px solid #cec6c6
		
		+above(768px)
			padding-bottom 30pr
	
	&__quest-text
		font-size 20pr
		font-weight 700
		
		+above(768px)
			font-size 24pr
	
	&__quest-img
		margin-bottom 10pr
		
		+above(768px)
			margin-bottom 20pr
		
		img
			max-width 100%
		
	&__answers
		padding-bottom 45pr
		
		+above(768px)
			padding-bottom 65pr
	
	&__answer
		padding 20pr
		border-bottom 1px solid #cec6c6
	
	&__radio
		display none
	
	&__radio + label
		display block
		position relative
		padding-left 35pr
		font-size 18pr
		line-height 1
		cursor pointer
		
		+above(768px)
			font-size 20pr
	
	&__radio + label::before
		content ''
		position absolute
		top 50%
		left 0
		width 20px
		height 20px
		background-color transparent
		border 1px solid #898b8b
		border-radius 50%
		transform translateY(-50%)
		transition all .3s ease
	
	&__radio:checked + label::before, &__radio:checked:hover + label::before
		background-color #45acac
		border 2px solid #45acac
		box-shadow inset 0 0 0 2px white
	
	&__radio:hover + label::before
		border 3px solid #45acac
	
	&__radio:disabled:hover + label::before
		border 1px solid #898b8b
	
	&__result
		text-align center
		
		+above(768px)
			min-height 750px
	
	&__result-wrap
		position relative
		
		&::after
			content ''
			position absolute
			top 0
			bottom 0
			left 0
			right 0
			width 100%
			background-color rgba(0, 0, 0, 0.3)
			
		img
			max-width 100%
		
	&__result-desc
		position absolute
		top 50%
		left 50%
		z-index 10
		width 100%
		color white
		transform translate(-50%, -50%)
	
	&__result-wrap
		margin-bottom 20pr
		font-size 0
		
		+above(768px)
			margin-bottom 30pr
	
	&__result-count
		margin-bottom 10pr
		font-size 30pr
		font-weight 700
		
		+above(768px)
			margin-bottom 20pr
			font-size 45pr
	
	&__result-variant
		font-size 20pr
		font-weight 600
		
		+above(768px)
			font-size 30pr
	
	&__result-text
		margin-bottom 30pr
		font-family 'Times New Roman', serif
		font-size 18pr
		text-align left
		line-height 1.3
		color black
		
		+above(768px)
			font-size 22pr
			line-height 1.4
	
	&__restart
		@extend $link-reset
		position relative
		display inline-block
		margin-bottom 15pr
		margin-left -35pr
		padding-left 35pr
		font-size 18pr
		font-weight 600
		color #a68151
		
		+above(768px)
			font-size 20pr
		
		&::before
			content ''
			position absolute
			top 50%
			left 0
			width 18px
			height 22px
			background-image url(../img/task3/reps.png)
			background-repeat no-repeat
			background-position 0 0
			background-size cover
			transform translateY(-50%)
			
			+above(768px)
				width 22px
				height 26px